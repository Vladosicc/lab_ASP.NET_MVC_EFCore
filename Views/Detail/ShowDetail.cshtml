@model IEnumerable<laba5_oop.Storage.Entity.Detail>

@{
    ViewData["Title"] = "ShowDetail";
}

<h1>Show Details</h1>

<p>
    <a asp-action="CreateDetail">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelCar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelCar.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsOfDetail" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Remove" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="DetailsOfDetail" asp-route-id="@item.Id" class="btn btn-danger">In cart </a>
            </td>
        </tr>
}
    </tbody>
</table>
