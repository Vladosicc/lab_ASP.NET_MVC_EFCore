@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>"Тут написано что то красивое"</p>
</div>
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a class="alert-link" asp-area="" asp-controller="Detail" asp-action="ShowDetail">
                <img src="~/css/Home1.jpg" class="img-fluid w-100" height="600" alt="Detail">
            </a>
        </div>
        <div class="carousel-item">
            <a class="alert-link" asp-area="" asp-controller="ModelCar" asp-action="ShowModelCar">
                <img src="~/css/Home2.jpg" class="img-fluid w-100" height="600" alt="Detail">
            </a>
        </div>
        <div class="carousel-item">
            <a class="alert-link" asp-area="" asp-controller="CarForSold" asp-action="Show">
                <img src="~/css/Home3.jpg" class="img-fluid w-100" height="600" alt="Detail">
            </a>
        </div>
        <div class="carousel-item">
            <a class="alert-link" asp-area="" asp-controller="BrandOfDetail" asp-action="Show">
                <img src="~/css/Home4.jpg" class="img-fluid w-100" height="600" alt="Detail">
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
